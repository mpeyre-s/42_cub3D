	{
		"version": "0.2.0",
		"configurations": [
			{
				"name": "cub3D",
				"type": "cppdbg",
				"request": "launch",
				"program": "${workspaceFolder}/cub3d",
				"args": ["bunker.cub"],
				"stopAtEntry": false,
				"cwd": "${workspaceFolder}",
				"environment": [],
				"externalConsole": true,
				"MIMode": "lldb",
				"setupCommands": [
					{
						"description": "Enable pretty-printing for lldb",
						"text": "settings set target.process.stop-on-sharedlibrary-events 0",
						"ignoreFailures": true
					}
				],
				"preLaunchTask": "Build cub3D"
			}
		]
	}

